{% extends 'layout.html.twig' %}

{% block content %}
    {% for table in tables %}
    <h2>Tabela rocznika ({{ table.year }})</h2>        
    <table class="table table-bordered table-striped simple-league-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Dru≈ºyna</th>
                <th>P</th>
                <th>W</th>
                <th>D</th>
                <th>L</th>
                <th>F</th>
                <th>A</th>
                <th>GD</th>
                <th>Pts</th>
            </tr> 
        </thead>
        <tbody>
            {% for team in table.table %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ team.Team }}</td>
                    <td>{{ team.P }}</td>
                    <td>{{ team.W }}</td>
                    <td>{{ team.D }}</td>
                    <td>{{ team.L }}</td>
                    <td>{{ team.F }}</td>
                    <td>{{ team.A }}</td>
                    <td>{{ team.GD }}</td>
                    <td>{{ team.Pts }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endfor %}
{% endblock %}
