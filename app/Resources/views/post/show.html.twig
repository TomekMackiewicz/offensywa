{% extends 'layout.html.twig' %}

{% block content %}
    <i class="fa fa-backward" aria-hidden="true"></i>
    <a href="{{ path('post_index') }}"> Back to the list</a>
    {% if post %}
        <h1>{{ post.title }}</h1>
        {% if post.image %}
            <img src="{% path post.image, 'big' %}">
        {% endif %}    
        <p>
            <small class="text-muted"> 
                {% if post.publishDate %}
                    <i class="fa fa-calendar" aria-hidden="true"></i> &nbsp; 
                    <abbr title="Publish date">{{ post.publishDate|date('Y-m-d H:i:s') }}</abbr>
                {% endif %}
                &nbsp;
                {% if post.modifyDate %}
                    <i class="fa fa-pencil" aria-hidden="true"></i> &nbsp; 
                    <abbr title="Modify date">{{ post.modifyDate|date('Y-m-d H:i:s') }}</abbr>
                {% endif %}
            </small>
        </p>
        {{ post.body | purify }}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="pull-left">
                <a class="btn btn-primary btn-sm" href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
            </div>
            <div class="pull-left">
                {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                {{ form_end(delete_form) }}
            </div>
        {% endif %}
    {% else %}
        Brak post√≥w
    {% endif %}
{% endblock %}
