{% if ads is not empty %}
    <div class="row">
        <div class="col-xs-12">
            {% for ad in ads %}
            <div class="jumbotron">
                <h3>{{ ad.title }}</h3>
                <p>{{ ad.body | purify }}</p>
            </div>    
            {% endfor %}
        </div>
    </div>
{% endif %}

