{% extends 'admin.html.twig' %}

{% block admin_body %}
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <h1>Edytuj płatność</h1>
            {% include 'partials/gritter.html.twig' %}
            <div class="admin-box">                     
                {{ form_start(edit_form, { 'attr': { 'class': 'admin-form', 'novalidate': 'novalidate' } }) }}
                    {{ form_widget(edit_form) }}
                    <input type="submit" class="btn btn-primary" value="Edytuj" />
                    <a href="{{ path('payment_index') }}" class="btn btn-default admin-form-btn-margin">
                        Wróć do listy
                    </a>                    
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
