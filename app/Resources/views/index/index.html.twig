{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-sm-4 col-xs-5">Najbliższy mecz</div>
                <div class="col-sm-8 col-xs-7">
                    <h3>Kolejne mecze</h3>
                    <div>
                        {% for fixture in upcomingFixtures %}
                            {{ fixture.homeTeam.name }}
                        {% endfor %}
                    </div>
                </div>
                <div class="col-xs-12">Aktualności</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-5 col-xs-6 r-full-width">
                    Ostatni mecz
                </div>
                <div class="col-lg-12 col-md-12 col-sm-7 col-xs-6 r-full-width">
                    Tabele
                </div>                    
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            Galeria
        </div>
    </div> 
    <div class="row">
        <div class="col-xs-12">
            Nasi zawodnicy
        </div>
    </div>     
{% endblock %}

