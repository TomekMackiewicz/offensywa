{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-sm-4 col-xs-5">                    
                    <div class="match-details">
                        <h4>NAJBLIŻSZY MECZ</h4>
                        {% if nextMatch %}
                            <p>{{ nextMatch.date | date('d-m-Y H:i') }}</p>
                            <div>
                                <table class="table borderless table-responsive">
                                    <tbody>
                                        <tr>
                                            <td class="col-md-6">
                                                {% if nextMatch.homeTeam.logo %}
                                                    <img src="{% path nextMatch.homeTeam.logo, 'small' %}">
                                                {% endif %}                                            
                                            </td>
                                            <td></td>
                                            <td class="col-md-6">
                                                {% if nextMatch.awayTeam.logo %}
                                                    <img src="{% path nextMatch.awayTeam.logo, 'small' %}">
                                                {% endif %}                                                                                         
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-6">
                                                {{ nextMatch.homeTeam.name }}                                           
                                            </td>
                                            <td>:</td>
                                            <td class="col-md-6">
                                                {{ nextMatch.awayTeam.name }}                                            
                                            </td>                                        
                                        </tr>
                                    </tbody>
                                </table>
                            </div>                
                        {% else %}
                            Brak zaplanowanych meczy.
                        {% endif %}
                    </div>
                </div>
                <div class="col-sm-8 col-xs-7">
                    <h2>KOLEJNE MECZE</h2>
                    <div class="table-responsive upcoming-fixtures">
                        <table class="table table-bordered table-striped"> 
                            <tbody>
                                {% for fixture in upcomingFixtures %}
                                    <tr>
                                        <td class="col-md-4">
                                            <div class="logo-with-name fixture-text">
                                                {% if fixture.homeTeam.logo %}
                                                    <img src="{% path fixture.homeTeam.logo, 'small' %}">
                                                {% endif %}                                        
                                                {{ fixture.homeTeam.name }}
                                            </div>
                                        </td>
                                        <td class="col-md-4 fixture-date">
                                            <span class="fixture-text">{{ fixture.date | date('d-m-Y H:i') }}</span>
                                        </td>
                                        <td class="col-md-4">
                                            <div class="logo-with-name fixture-text">
                                                {% if fixture.awayTeam.logo %}
                                                    <img src="{% path fixture.awayTeam.logo, 'small' %}">
                                                {% endif %}                                        
                                                {{ fixture.awayTeam.name }}
                                            </div>                                    
                                        </td>
                                    </tr> 
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-xs-12">
                    <h2>AKTUALNOŚCI</h2>
                    <div id="newsCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for post in recentPosts %}
                                {% if loop.index0 == 0 %}
                                    <div class="item active">
                                {% else %}
                                    <div class="item">
                                {% endif %}
                                {% if post.image %}
                                    <img src="{% path post.image, 'big' %}">
                                {% else %}
                                    <img src="http://placehold.it/760x400/cccccc/ffffff">
                                {% endif %}                                                                     
                                    <div class="carousel-caption">
                                        <h3>
                                            <a href="{{ path('post_show', { 'id': post.id }) }}">
                                                {{ post.title }}
                                            </a>
                                        </h3>
                                        <p>
                                            {% if post.body | length > 160 %}
                                                {{ (post.body | slice(0, 161) | split(' ') | slice(0, -1) | join(' ') ~ '…') | purify }}
                                            {% else %}
                                                {{ post.body | purify }}
                                            {% endif %}
                                            <a class="label" href="{{ path('post_show', { 'id': post.id }) }}" target="_blank">
                                                Czytaj >>>
                                            </a>
                                        </p>
                                    </div>
                                </div>                               
                            {% endfor %}
                        </div>
                        <ul class="list-group col-sm-4">
                            {% for post in recentPosts %}
                                {% if loop.index0 == 0 %}
                                    <li data-target="#newsCarousel" data-slide-to="{{ loop.index0 }}" class="list-group-item active">
                                        <h4>{{ post.title }}</h4>
                                    </li>
                                {% else %}
                                    <li data-target="#newsCarousel" data-slide-to="{{ loop.index0 }}" class="list-group-item">
                                        <h4>{{ post.title }}</h4>
                                    </li>
                                {% endif %}                                
                            {% endfor %}
                        </ul>
                        <div class="carousel-controls">
                            <a class="left carousel-control" href="#newsCarousel" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#newsCarousel" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>
                    </div>
                    <div class="col-xs-12">
                        <h2>NASI ZAWODNICY</h2>
                        <a href="{{ path('player_index') }}">
                            Zobacz wszystkich 
                            <i class="fa fa-forward" aria-hidden="true"></i>
                        </a>
                        <div class="row">
                            {% for player in players %}
                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                    <div class="thumbnail">
                                        <a href="{{ path('player_show', { 'id': player.id }) }}">
                                            {% if player.image %}
                                                <img src="{% path player.image, 'small' %}" class="img-responsive" alt="{{ player.firstName }} {{ player.lastName }}">
                                            {% else %}
                                                <img src="http://placehold.it/150x200/cccccc/ffffff">
                                            {% endif %}
                                            <div class="caption">
                                                <h4>{{ player.firstName }} {{ player.lastName }}</h4>
                                                <p>{{ player.position }}</p>
                                            </div>
                                        </a>
                                    </div>                        
                                </div>
                            {% endfor %}                
                        </div>
                    </div>                        
                </div>                       
            </div>
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-5 col-xs-6">
                    <div class="match-details">
                        <h4>OSTATNI MECZ</h4>
                        {% if lastMatch %}
                            <p>{{ lastMatch.date | date('d-m-Y H:i') }}</p>
                            <div>
                                <table class="table borderless table-responsive">
                                    <tbody>
                                        <tr>
                                            <td class="col-md-5">
                                                <h2>{{ lastMatch.homeTeamScore }}</h2>                                            
                                            </td>
                                            <td class="col-md-2">
                                                <h2>:</h2>
                                            </td>
                                            <td class="col-md-5">
                                                <h2>{{ lastMatch.awayTeamScore }}</h2>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-5">
                                                {% if lastMatch.homeTeam.logo %}
                                                    <img src="{% path lastMatch.homeTeam.logo, 'small' %}">
                                                {% endif %}                                            
                                            </td>
                                            <td class="col-md-2"></td>
                                            <td class="col-md-5">
                                                {% if lastMatch.awayTeam.logo %}
                                                    <img src="{% path lastMatch.awayTeam.logo, 'small' %}">
                                                {% endif %}                                                                                         
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-5">
                                                {{ lastMatch.homeTeam.name }}                                           
                                            </td>
                                            <td class="col-md-2">vs</td>
                                            <td class="col-md-5">
                                                {{ lastMatch.awayTeam.name }}                                            
                                            </td>                                        
                                        </tr>
                                    </tbody>
                                </table>
                            </div>                
                        {% else %}
                            Brak ostatniego meczu.
                        {% endif %}
                    </div>                    
                </div>
                <div class="col-lg-12 col-md-12 col-sm-7 col-xs-6">
                    <h2>TABELE</h2>
                    <a href="{{ path('leaguetables') }}">
                        Zobacz wszystkie 
                        <i class="fa fa-forward" aria-hidden="true"></i>
                    </a>                    
                    {% for table in leagueTables %}
                    <h4>Rocznik {{ table.year }}</h4> 
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped simple-league-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Drużyna</th>
                                    <th>RM</th>
                                    <th>W</th>
                                    <th>R</th>
                                    <th>P</th>
                                    <th>Pkt</th>
                                </tr>
                            </thead>    
                            <tbody>    
                                {% for team in table.table %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ team.Team }}</td>
                                        <td>{{ team.P }}</td>
                                        <td>{{ team.W }}</td>
                                        <td>{{ team.D }}</td>
                                        <td>{{ team.L }}</td>
                                        <td>{{ team.Pts }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% endfor %}                    
                </div>                    
            </div>
        </div>
    </div>   
{% endblock %}

