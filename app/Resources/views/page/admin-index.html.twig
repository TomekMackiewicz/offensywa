{% extends 'admin.html.twig' %}

{% block admin_body %}
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">    
            <h1>Strony</h1>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('page_new') }}" class="btn btn-success">
                <i class="fa fa-plus" aria-hidden="true"></i> 
                Dodaj
            </a>
            {% endif %}
            {% include 'partials/gritter.html.twig' %}
            <div class="admin-box"> 
                <table class="table data-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th><i class="fa fa-sort" aria-hidden="true"></i> Tytuł</th>
                            <th>Edycja</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for page in pages %}
                        <tr>
                            <td></td>
                            <td>{{ page.title }}</td>
                            <td class="col-md-3">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('page_edit', { 'id': page.id }) }}" class="btn btn-primary btn-sm pull-left admin-form-btn-margin">
                                    Edytuj
                                </a>
                                <form action="{{ path('page_delete', { 'id': page.id }) }}" method="post">
                                    {{ form_widget(deleteForms[page.id]) }}
                                    <input type="submit" class="btn btn-danger btn-sm" value="Usuń">
                                </form>                             
                            {% endif %}                    
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
