{% extends 'admin.html.twig' %}

{% block admin_body %}
    <h1>Edytuj stronę</h1>
    {% include 'partials/gritter.html.twig' %}
    <div class="admin-box">                     
        {{ form_start(edit_form, { 'attr': {'class': 'admin-form', 'novalidate': 'novalidate'} }) }}
            {{ form_widget(edit_form) }}
            <input type="submit" class="btn btn-primary" value="Edytuj" />
            <a href="{{ path('admin_page_index') }}" class="btn btn-default admin-form-btn-margin">
                Wróć do listy
            </a>            
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
