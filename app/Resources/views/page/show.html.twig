{% extends 'layout.html.twig' %}

{% block meta %}
    <title>Offensywa &bull; Informacje</title>
    <meta name="description" content="Informacje na temat klubu Offensywa Książenice - {{ page.title }}">
    <meta property="og:title" content="Offensywa Książenice – szkółka piłkarska" />
    <meta property="og:description" content="Informacje na temat klubu Offensywa Książenice - {{ page.title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ app.request.uri }}" />
    <meta property="og:image" content="http://placehold.it/760x400/cccccc/ffffff" />     
{% endblock %}

{% block content %}
    {% if page %}
        <h1>{{ page.title }}</h1>   
        {{ page.body | purify }}
    {% else %}
        <h2>Brak zawartości</h2>
    {% endif %}
{% endblock %}
