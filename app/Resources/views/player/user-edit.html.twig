{% extends 'admin.html.twig' %}

{% block admin_body %}
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3"> 
            <h1>Edytuj zawodnika</h1>
            {% include 'partials/gritter.html.twig' %}
            <div class="admin-box">                      
                {{ form_start(edit_form, { 'attr': {'class': 'admin-form', 'novalidate': 'novalidate'} }) }}
                    {{ form_widget(edit_form) }}
                    <input type="submit" class="btn btn-primary" value="Edytuj" />
                {{ form_end(edit_form) }}
                <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default pull-left admin-form-btn-margin">
                    Wróć
                </a>
            </div>
        </div>
    </div>
{% endblock %}
