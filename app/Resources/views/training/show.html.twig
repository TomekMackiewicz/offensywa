{% extends 'base.html.twig' %}

{% block body %}
    <h1>Training</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if training.startHour %}{{ training.startHour|date('H:i:') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if training.endHour %}{{ training.endHour|date('H:i') }}{% endif %}</td>
            </tr>            
            <tr>
                <th>Location</th>
                <td>{{ training.location }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('training_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('training_edit', { 'id': training.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
