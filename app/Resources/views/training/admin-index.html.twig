{% extends 'admin.html.twig' %}

{% block admin_body %}
    <h1>Treningi</h1>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('training_new') }}" class="btn btn-success">
        <i class="fa fa-plus" aria-hidden="true"></i> 
        Dodaj
    </a>
    {% endif %}
    <div class="admin-box"> 
        <table class="table data-table">
            <thead>
                <tr>
                    <th></th>
                    <th><i class="fa fa-sort" aria-hidden="true"></i> Data</th>
                    <th><i class="fa fa-sort" aria-hidden="true"></i> Miejsce</th>
                    <th><i class="fa fa-sort" aria-hidden="true"></i> Drużyna</th>
                    <th><i class="fa fa-sort" aria-hidden="true"></i> Trener</th>
                    <th>Edycja</th>
                </tr>
            </thead>
            <tbody>
            {% for training in trainings %}
                <tr>
                    <td></td>
                    <td>{% if training.date %}{{ training.date|date('Y-m-d H:i') }}{% endif %}</td>
                    <td>{{ training.location }}</td>
                    <td>{{ training.team.name }}</td>
                    <td>{{ training.trainer.firstName }} {{ training.trainer.lastName }}</td>
                    <td class="col-md-2">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('training_edit', { 'id': training.id }) }}" class="btn btn-primary btn-sm pull-left admin-form-btn-margin">
                            Edytuj
                        </a>
                        <form action="{{ path('training_delete', { 'id': training.id }) }}" method="post">
                            {{ form_widget(deleteForms[training.id]) }}
                            <input type="submit" class="btn btn-danger btn-sm" value="Usuń">
                        </form>                             
                    {% endif %}                    
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

