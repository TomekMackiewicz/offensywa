{% extends 'admin.html.twig' %}

{% block admin_body %}
    <div class="admin-box">
        <h1>Zadania trenerskie</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Data</th>
                    <th>Obecność trenera</th>
                    <th>Lista obecności</th>
                    <th>Konspekt</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{% if task.date %}{{ task.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if task.trainerPresence %}Tak{% else %}Nie{% endif %}</td>
                    <td>{% if task.attendanceList %}Tak{% else %}Nie{% endif %}</td>
                    <td>{% if task.outline %}Tak{% else %}Nie{% endif %}</td>
                    <td>
                        <a href="{{ path('task_show', { 'id': task.id }) }}" class="btn btn-default btn-sm pull-left admin-form-btn-margin">
                            Pokaż
                        </a>
                        <a href="{{ path('task_edit', { 'id': task.id }) }}" class="btn btn-primary btn-sm pull-left admin-form-btn-margin">
                            Edytuj
                        </a>
                        <form action="{{ path('task_delete', { 'id': task.id }) }}" method="post">
                            {{ form_widget(deleteForms[task.id]) }}
                            <input type="submit" class="btn btn-danger btn-sm" value="Usuń">
                        </form>                         
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('task_new') }}" class="btn btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> 
            Dodaj
        </a>
    </div>
{% endblock %}
